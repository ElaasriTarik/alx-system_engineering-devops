#!/usr/bin/env bash
# check if file exists...

file="school"
if [ -e "$file" ];
then
    echo "school file exists"
    if [ -s "$file" ];
    then
	echo "school file is not empty"
        if [ -f "$file" ];
        then
	    echo "school is a regular file"
    else
        echo "school file is empty"
else
echo "shcool file does not exist"
fi
